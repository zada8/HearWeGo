<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HospitalActivity">

    <!-- 주변시설 - 병원 카테고리 -->

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="411dp"
        android:layout_height="823dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        tools:ignore="MissingConstraints">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_hospital"
        android:layout_width="411dp"
        android:layout_height="92dp"
        android:background="@drawable/frame_29"
        tools:ignore="MissingConstraints">

        <!-- 병원 -->
        <TextView
            android:id="@+id/categoryName"
            android:layout_width="67dp"
            android:layout_height="54dp"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="19dp"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="10sp"
            android:text="병원"
            android:textColor="@color/yellow"
            android:textSize="36dp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_medium"/>
    </RelativeLayout>

    <!-- 병원1 -->
    <ScrollView
        android:layout_width="411dp"
        android:layout_height="615dp"
        android:layout_marginTop="124dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 병원1 -->
            <Button
                android:id="@+id/hospital1"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/default_yellow"
                android:text="병원1"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- 병원2 -->
            <Button
                android:id="@+id/hospital2"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/default_yellow"
                android:text="병원2"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- 병원3 -->
            <Button
                android:id="@+id/hospital3"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/default_yellow"
                android:text="병원3"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- 병원4 -->
            <Button
                android:id="@+id/hospital4"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/default_yellow"
                android:text="병원4"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- 병원5 -->
            <Button
                android:id="@+id/hospital5"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/default_yellow"
                android:text="병원5"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- 병원6 -->
            <Button
                android:id="@+id/hospital6"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/default_yellow"
                android:text="병원6"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- 병원7 -->
            <Button
                android:id="@+id/hospital7"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/default_yellow"
                android:text="병원7"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

            <!-- 병원8 -->
            <Button
                android:id="@+id/hospital8"
                android:layout_width="395dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/default_yellow"
                android:text="병원8"
                android:textColor="@color/yellow"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_medium"/>

        </LinearLayout>
    </ScrollView>


    <!-- 홈 버튼 -->
    <Button
        android:id="@+id/home"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:layout_marginTop="739dp"
        android:background="@drawable/frame_31"
        android:text="홈"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- 이전 버튼 -->
    <Button
        android:id="@+id/previous"
        android:layout_width="205dp"
        android:layout_height="84dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="739dp"
        android:background="@drawable/frame_31"
        android:text="이전"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintLeft_toRightOf="@+id/home"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>



